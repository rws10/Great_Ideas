@model IEnumerable<IdeaSite.Models.Idea>
@{
	ViewBag.Title = "Ideas";
}

	<div class="container-fluid row content">
	@using (Html.BeginForm("Index", "Ideas", FormMethod.Get))
	{
		<p><b>Search By:</b>
		@Html.RadioButton("searchBy", "Title", true) <text> Title </text>
		@Html.RadioButton("searchBy", "Description") <text> Description </text>
		</p>
		<p>
		<b>Filter By:</b>
		@Html.RadioButton("sortByStatus", "All", true) <text>  All  </text>
		@Html.RadioButton("sortByStatus", "Submitted") <text>  Submitted  </text>
		@Html.RadioButton("sortByStatus", "Approved") <text>  Approved  </text>
		@Html.RadioButton("sortByStatus", "Denied") <text>  Denied  </text>
		</p>
		<p>
		@Html.TextBox("search") <button type="submit" class="btn btn-default btn-sm">
		<span class="glyphicon glyphicon-search"></span> Search
		</button>
		</p>
	}
	</div>

@foreach (var item in Model)
	{
	   <div class="container-fluid bsolid">
		 <div class="row content">
			 <div class="col-md-3 sidenav">
			   <ul class="nav nav-pills nav-stacked">
				 <li>@Html.ActionLink("Details", "Details", new { id = item.ID })</li>
				 <li>@Html.ActionLink("approval", "Approval", new { id = item.ID })</li>
				 <li>@Html.ActionLink("delete", "Delete", new { id = item.ID })</li>
				 <li>@Html.ActionLink("approval", "Edit", new { id = item.ID })</li>
				 <li>@Html.ActionLink("View Comments", "Index", "Comments", item, null)</li>
				 <li>@Html.ActionLink("Create Comments", "Create", "Comments", item, null)</li>
			   </ul><br>
			</div>
			<div class="col-md-9">
			  <h4>Title: @Html.DisplayFor(modelItem => item.title)</h4>
			  <h5><span class="glyphicon glyphicon-time"></span> Posted by @Html.DisplayFor(modelItem => item.cre_user) on @Html.DisplayFor(modelItem => item.cre_date)</h5>
			  <hr>
			  <h5><span class="label label-success">Description:</span></h5>
			  <textarea rows="6" cols="100" readonly>@Html.DisplayFor(modelItem => item.body)</textarea>
			  <br>
			</div>	
		 </div>
		</div>
		<br>
	}

<p><b>Click below to submit new Idea</b></p>
<p><button type="button" class="btn btn-default">@Html.ActionLink("Create New", "Create")</button></p>