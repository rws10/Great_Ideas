@using IdeaSite.Models

@model IEnumerable<IdeaSite.Models.Comment>

@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>


<span>Idea: @ViewBag.idea.title</span> <br />
<span>Description: @ViewBag.idea.description</span> <br />
<span>Date Posted: @ViewBag.idea.creationDate</span> <br />
<!--int id = ViewBag.idea.ID;-->




    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.cre_user)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.body)
            </th>
            <td>
                @Html.DisplayNameFor(model => model.cre_date)
            </td>
            <th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.cre_user)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.body)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cre_date)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", "Comments", new { item.ID }, null) |
                @*@Html.ActionLink("Details", "Details", new { id=item.ideaID }) |*@
                @Html.ActionLink("Delete", "Delete", "Comments", new { id=item.ID }, null)
            </td>
        </tr>
    }
            @Html.ActionLink("Create New", "Create", "Comments", new { id = ViewBag.idea.ID }, null)
       
    </table>


    @Html.ActionLink("Back to List", "Index", "Ideas")
</body>
</html>
