@model IdeaSite.Models.Comment

@{
    ViewBag.Title = "Delete";
}

    <div class="H3">Are you sure you want to delete this?</div>
    <div>
        <div class="H4">Comment</div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.cre_user)
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.cre_user)
            </dd>
    
            <dt>
                @Html.DisplayNameFor(model => model.body)
            </dt>
    
            <dd class="display">
                @Html.DisplayFor(model => model.body)
            </dd>
    
            <dt>
                @Html.DisplayNameFor(model => model.cre_date)
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.cre_date)
            </dd> 
        </dl>
    
        @using (Html.BeginForm()) {
            @Html.AntiForgeryToken()
    
            <div class="form-actions no-color btn-group">
                <input type="submit" value="Delete" class="btn btn-default btn-sm" />
                 @Html.ActionLink("Back to List", "Index", "Comments", new { id = Model.ideaID }, new { @class = "btn btn-default btn-sm" })
            </div>
        }
    </div>
